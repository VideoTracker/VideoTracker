<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udem.videotracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.RechercheActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

         <activity 
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.ResultActivity"
            android:label="Recherche"/>
         
         <activity 
            android:configChanges="orientation"
    		android:screenOrientation="landscape"
            android:name="com.udem.videotracker.YoutubePlayerActivity"
            android:label="Lecteur"/>
         
         <activity 
    		android:screenOrientation="landscape"
    		android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:name="com.udem.videotracker.DailymotionPlayerActivity"
            android:label="Lecteur Dailymotion"/>
        
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.PlaylistActivity"
            android:label="Playlists" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.PlaylistVideoActivity"
            android:label="Playlists" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.ResultatVideosActivity"
            android:label="Vidéos" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.PreferencesActivity"
            android:label="Préférences" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.ProposActivity"
            android:label="À propos de VideoTracker" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.AideActivity"
            android:label="Aide de VideoTracker" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:name="com.udem.videotracker.InternetCheckActivity"
            android:label="Vérification de la connexion Internet" >
        </activity>
        
    </application>

</manifest>
