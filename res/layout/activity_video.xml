        android:textSize="12sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" vues"
        android:textSize="12sp" />
    </LinearLayout>
	
	<ImageView 
	    android:id="@+id/test"
	            android:layout_width="match_parent"
        android:layout_height="wrap_content"></ImageView>	
